<!DOCTYPE html>
<html lang="en">

<head>
    <title>{{title}}</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,400i,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="css/vendor/datatables.min.css">
    <link rel="stylesheet" href="css/vendor/perfect-scrollbar.css">
    <link rel="stylesheet" href="css/vendor/lite-purple.min.css">
</head>

<body>
    {{> dashboard_nav}}

    <div class="main-content-wrap sidenav-open d-flex flex-column">
        <div class="breadcrumb">
            <h1>{{title}}</h1>
            <ul>
                <li><a href="#">Dashboard</a></li>
                <li>Departments</li>
            </ul>
        </div>
        <div class="separator-breadcrumb border-top"></div>

        <div class="col-xs-12 col-md-7">
            <form action="/admin/add_categories" method="post" class="form-group">
                <label for="category">Add Department</label>
                <div class="d-flex align-items-center align-content-center">
                    <input type="text" class="form-control" name="category">
                    <button class="btn btn-success mx-5" onclick="notify()" type="submit">Add Department</button>
                </div>
            </form>
        </div>

        <div class="row mt-4">

            <div class="col-md-12 ">
                <div class="card o-hidden mb-4">
                    <div class="card-header d-flex align-items-center">
                        <h3 class="w-50 float-left card-title m-0">Departments</h3>
                    </div>

                    <div class="card-body">

                        <div class="table-responsive">

                            <table class="table text-center">
                                <thead>
                                    <tr>
                                        <th scope="col">No.</th>
                                        <th scope="col">Department</th>
                                        <th scope="col">Edit</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    {{#each categories}}
                                    <tr>
                                        <th scope="row">{{count}}</th>
                                        <td>{{this.category}}</td>
                                        <td>
                                            <a href="#" class="text-success mr-2" data-toggle="modal"
                                                data-target="#exampleModalLong">
                                                <i class="nav-icon fa fa-code font-weight-bold"></i>
                                            </a>
                                        </td>

                                        <td>
                                            <div class="text-danger mr-2">
                                                <i class="nav-icon fas fa-trash-alt font-weight-bold"
                                                    onclick=logout('{{this._id}}') style="cursor: pointer"></i>
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal HTML -->
    {{#each categories}}
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Edit Category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/admin/categories/edit/ + {{this._id}}" + method="POST">
                        <div class="form-group">
                            <div class="input-group ">
                                <input type="text" class="form-control" name="category" placeholder="{{this.category}}"
                                    required="required">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                </div>
            </div>
        </div>
    </div>
    {{/each }}
        
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"> </script>
        <script src="js/jquery-3.3.1.min.js"></script>
        <script src="js/perfect-scrollbar.min.js"></script>
        <script src="js/echarts.min.js"></script>
        <script src="js/datatables.mijs"></script>
        <script src="js/echart.options.min.js"></script>
        <script src="js/dashboard.v2.script.min.js"></script>
        <script src="js/script.min.js"></script>
        <script src="js/init.js"></script>

        <script>

            async function logout(id) {
                return console.log(id)
                swal({
                    title: "Are you sure?",
                    text: "Once deleted, you will not be able to recover this imaginary file!",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            await fetch(`/admin/categories/delete/${id}`, {
                                method: 'delete'
                            }).then(() => {
                                swal('Category Deleted Succefully', {
                                    icon: "success",
                                })
                            }).catch((e) {
                                swal('Category is not deleted' {
                                    icon: 'danger'
                                })
                            })

                        } else {
                            swal("Your file is safe!");
                        }
                    });


            }

            function notify() {
                Swal.fire(
                    'Good job!',
                    'Category Added Succefully',
                    'success'
                )
            }
        </script>
</body>

</html>